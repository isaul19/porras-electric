---
import Page from "../layouts/Page.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import ImageCard from "../components/ImageCard.astro";
import Form from "../components/Form.astro";
import Floats from "../components/Floats.astro";

import servicesJson from "../data/services.json";
---

<Page>
  <Navbar />
  <Hero />

  <section id="section-about" class="mt-10">
    <h2
      class="text-blue-700 font-bold uppercase text-xl inline-block border-b-2 border-blue-700 mb-5"
    >
      Sobre nosotros
    </h2>

    <div class="mx-auto max-w-screen-xl text-center">
      <p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl text-start">
        Somos una empresa con varios años de experiencia en el campo dedicada a brindar servicios
        eléctricos de alta calidad para satisfacer las necesidades de nuestros clientes. Nuestro
        compromiso es proporcionar soluciones eléctricas seguras, eficientes y confiables para
        hogares, negocios e industrias. Nuestro equipo está formado por profesionales altamente
        capacitados que se esfuerzan por ofrecer un servicio excepcional en cada proyecto.
      </p>
      <img src="/images/logo.png" class="h-56 sm:scale-125 mx-auto" alt="Flowbite Logo" />
    </div>
  </section>

  <section id="section-services" class="mt-10">
    <h2
      class="text-blue-700 font-bold uppercase text-xl inline-block border-b-2 border-blue-700 mb-5"
    >
      Servicios
    </h2>

    <div class="flex flex-wrap gap-7 justify-around">
      {
        servicesJson.map(({ title, description, src }) => (
          <ImageCard title={title} description={description} src={src} />
        ))
      }
    </div>
  </section>

  <section id="section-contact" class="mt-10">
    <h2
      class="text-blue-700 font-bold uppercase text-xl inline-block border-b-2 border-blue-700 mb-5"
    >
      Contacto
    </h2>

    <Form />
  </section>
  <Floats />
</Page>
