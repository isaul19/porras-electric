---
interface Props {
  title: string;
  id: string;
  className?: string;
}

const { title, id, className } = Astro.props;
---

<section id={`section-${id}`} class="mt-10">
  <h2
    class="text-blue-700 font-bold uppercase text-xl inline-block border-b-2 border-blue-700 mb-5"
  >
    {title}
  </h2>
  <div class={className}>
    <slot />
  </div>
</section>
